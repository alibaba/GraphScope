                                     ${ANALYTICAL_ENGINE_FRAME_DIR}/cython_pie_app_frame.cc)
    target_compile_definitions(${FRAME_NAME} PRIVATE _VD_TYPE=$_vd_type
                                                     _MD_TYPE=$_md_type
