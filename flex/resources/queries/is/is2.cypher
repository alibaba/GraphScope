MATCH (p: PERSON { id : $personId}) <- [:HASCREATOR] - (msg : POST | COMMENT) -  [:REPLYOF*0..3] -> (po : POST) -[:HASCREATOR] -> (friend : PERSON) with msg AS msg, po AS po, friend AS friend ORDER By msg.creationDate DESC, msg.id DESC  return msg.id as messageId, msg.content as messageContent, msg.imageFile as messageImageFile, msg.creationDate as messageCreationDate, po.id AS postId, friend.id AS personId, friend.firstName AS personFirstName, friend.lastName AS personLastName 