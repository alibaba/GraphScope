MATCH(p:person {id: $personId}) <-[:hasCreator] -(msg : post | comment) <- [:replyOf] - (cmt: comment) - [:hasCreator] -> (author : person) with p, msg, cmt, author ORDER BY cmt.creationDate DESC, cmt.id ASC limit 20 return author.id, author.firstName, author.lastName, cmt.creationDate, cmt.id, cmt.content