<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>all</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <excludes>
        <exclude>org.apache.tinkerpop:gremlin-test</exclude>
        <exclude>org.codehaus.groovy:groovy-sql</exclude>
        <exclude>org.hamcrest:hamcrest-all</exclude>
        <exclude>com.carrotsearch:junit-benchmarks</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../frontend/target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>ir*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../research/query_service/ir/target/release</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>libir_core*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
