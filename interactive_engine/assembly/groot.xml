<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>groot-assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/executor/assembly/groot/target/debug</directory>
            <includes>
                <include>libgroot_ffi.so</include>
                <include>libgroot_ffi.dylib</include>
            </includes>
            <outputDirectory>native</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/executor/assembly/groot/target/release</directory>
            <includes>
                <include>libgroot_ffi.so</include>
                <include>libgroot_ffi.dylib</include>
            </includes>
            <outputDirectory>native</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/executor/ir/target/release</directory>
            <includes>
                <include>libir_core.so</include>
                <include>libir_core.dylib</include>
            </includes>
            <outputDirectory>native</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/lgraph/build/install</directory>
            <excludes>
                <exclude>include/*</exclude>
                <exclude>lib*/libgroot_ffi*</exclude>
            </excludes>
            <outputDirectory>native</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/bin/groot/</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/conf/groot</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>com.alibaba.graphscope:data-load-tool</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>loader</outputDirectory>
            <includes>
                <include>com.alibaba.graphscope:data-load-tool</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
