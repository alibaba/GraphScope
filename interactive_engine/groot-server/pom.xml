  <profiles>
    <profile>
      <id>gremlin-test</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven.surefire.version}</version>
            <configuration>
              <includes>
                <include>**/GremlinStandardTest.java</include>
              </includes>
              <argLine>
                -Djna.library.path=${project.parent.basedir}/executor/target:/usr/local/lib:${project.parent.basedir}/lgraph/build
              </argLine>
              <environmentVariables>
                <RUST_BACKTRACE>1</RUST_BACKTRACE>
              </environmentVariables>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <extensions>
      <extension>
        <groupId>kr.motd.maven</groupId>
        <artifactId>os-maven-plugin</artifactId>
        <version>${os.maven.plugin.version}</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.version}</version>
        <configuration>
          <excludes>
            <exclude>**/RemoteGremlinStandardTest.java</exclude>
            <exclude>**/FfiTest.java</exclude>
          </excludes>
          <argLine>
            -Djna.library.path=${project.parent.basedir}/executor/target:/usr/local/lib:${project.parent.basedir}/lgraph/build
          </argLine>
          <environmentVariables>
            <RUST_BACKTRACE>1</RUST_BACKTRACE>
          </environmentVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
